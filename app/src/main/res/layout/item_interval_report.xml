<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="@drawable/rounded_background"
    android:layout_marginBottom="8dp">

    <!-- Тип интервала -->
    <TextView
        android:id="@+id/intervalType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Разминка"
        android:textSize="16sp"
        android:textStyle="bold" />

    <!-- Пройденное расстояние -->
    <TextView
        android:id="@+id/intervalDistance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Пройдено: 500 м"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <!-- Время -->
    <TextView
        android:id="@+id/intervalDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Время: 00:02:30"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <!-- Темп -->
    <TextView
        android:id="@+id/intervalPace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Темп: 5:00 мин/км"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

</LinearLayout>